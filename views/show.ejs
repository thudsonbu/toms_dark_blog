<%- include("./partials/header") %>

<div class="ui main text container segment inverted card fluid">
	<div class="image">
			<img src="<%=blog.image%>">
	</div>
	<div class="ui main text container segment inverted">
		<h1>
			<%=blog.title%>
		</h1>
		<h4>
			<span><%= blog.created.toDateString() %></span>
		</h4>
		<p>
			<%-blog.body%>
		</p>
		
		<form action="/blogs/<%=blog._id%>?_method=DELETE" method="POST">
			<a href="/blogs/<%=blog._id%>/edit" class="ui inverted blue button">Edit</a>
			<button class="ui inverted red right floated button" type="submit">Delete</button>
		</form>
	</div>
</div>

<%- include("./partials/footer") %>