<%- include("./partials/header") %>

<div class="ui main text container inverted segment">
	<div class="ui huge header">
		Edit: <%=blog.title%>
	</div>
	<form action="/blogs/<%=blog._id%>?_method=PUT" method="POST" class="ui form inverted">
  		<div class="field">
    		<label>Blog Title</label>
    		<input type="text" name="blog[title]" value="<%=blog.title%>">
  		</div>
  		<div class="field">
    		<label>Image URL</label>
  			<input type="text" name="blog[image]" value="<%=blog.image%>">
  		</div>
  		<div class="field">
    		<label>Content</label>
			<textarea name="blog[body]"><%=blog.body%></textarea>
  		</div>
  	<button class="ui fluid inverted black button" type="submit">Submit</button>
	</form>
</div>

<%- include("./partials/footer") %>