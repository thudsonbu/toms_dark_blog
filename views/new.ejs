<%- include("./partials/header") %>

<div class="ui main text container inverted segment">
	<div class="ui huge header">
		Create New Blog
	</div>
	<form action="/blogs" method="POST" class="ui form inverted">
  		<div class="field">
    		<label>Blog Title</label>
    		<input type="text" name="blog[title]" placeholder="title">
  		</div>
  		<div class="field">
    		<label>Image URL</label>
  			<input type="text" name="blog[image]" placeholder="image">
  		</div>
  		<div class="field">
    		<label>Content</label>
			<textarea name="blog[body]" placeholder="tell a story"></textarea>
  		</div>
  	<button class="ui fluid inverted black button" type="submit">Submit</button>
	</form>
</div>

<%- include("./partials/footer") %>